FROM python:3.10-slim

WORKDIR /app

COPY loader-service/requirements.txt /app/requirements.txt
RUN pip install --no-cache-dir -r /app/requirements.txt

COPY loader-service /app/loader-service
COPY shared /app/shared

ENV PYTHONPATH="/app/shared:/app"

EXPOSE 8000

# Copy and set execute permission for startup script
COPY loader-service/start.sh /app/start.sh
RUN chmod +x /app/start.sh

CMD ["/app/start.sh"]
